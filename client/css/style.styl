/*-- Font --*/
roboto-font = 'Roboto', sans-serif
font-default = 1rem
font-bold = 600
font-regular = 400
font-light = 300

/*--- Image ---*/
banner-head = url('/img/head-banner.jpg')

/*--- Color ---*/
white = #ffffff
grey = #666666
dark-grey = #333333
blue-fb = #4267B2
grey-bg = #e0e0e0
soft-grey-bg = #eeeeee

/*--- Size ---*/
one = 1rem
half = .5rem
two = 2rem
one-tb = 1rem 0
one-lr = 0 1rem
half-lr = 0 .5rem
btn-pad = .258rem .8rem

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)
  
border()
  vendor('border', arguments)

column()
  vendor('column-count', arguments)

body
  margin: 0
  font-family: roboto-font
  font-size: font-default
  font-weight: 400
  line-height: 1.5
  color: #212529
  text-align: left
  background-color: #fff

header
  background-image: banner-head
  
.hw-head-sec
  padding: 5rem 0
  
  h1
    color: white
    
.page-container
  max-width: 1200px
  width: 100%;
  margin-right: auto;
  margin-left: auto;
  
.hw-container
  max-width: 1100px
  width: 100%;
  margin-right: auto;
  margin-left: auto;
  
section
  margin-bottom: one
  
.desc-sec
  padding: 0 15px
  
  h1
    color: dark-grey
    font-family: roboto-font
    font-weight: font-bold
  
  h3
    color: grey
    font-family: roboto-font
    font-weight: font-bold
    margin-bottom: one
    
  .col-6
    margin-bottom: one
    
  .col-12
    margin-bottom: one
    
.btn-fb
  background-color: blue-fb
  border-radius: 2px
  color: white
  padding: btn-pad
  text-decoration: none
  
.btn-fb:hover
  color: #e0e0e0
  text-decoration:none
  
.bg-grey
  color: dark-grey
  background-color: grey-bg !important
  
.bg-grey.nav-item.nav-link
  border-radius 0
  background-color: soft-grey-bg !important
  
.bg-grey.nav-item.nav-link.active
  border none
  font-weight: font-bold
  background-color: grey-bg !important
  
.bg-grey.tab-pane
  padding: two
  
.card-thumb
  background-color: soft-grey-bg
  max-width:100%
  min-width:100%
  
  h4
    font-family: inherit
    font-size: 22px
    font-weight: 500
    color: dark-grey
    padding: 1rem .5rem 0 .5rem
    
  .price
    font-family: inherit
    font-weight: 500
    color: dark-grey
    padding: half-lr
    
.card-thumb.out-of-stock
  background-color: soft-grey-bg
  max-width:100%
  min-width:100%
  
  h4
    font-family: inherit
    font-weight: 500
    color: grey
    padding: 1rem .5rem 0 .5rem
    text-decoration: line-through
    
  .price
    font-family: inherit
    font-weight: 500
    color: grey
    padding: half-lr
    text-decoration: line-through
    
  .btn-buy
    background-color: dark-grey !important
    color: white !important
    
.card-thumb.best-price
  background-color: soft-grey-bg
  max-width:100%
  min-width:100%
  border 1px solid red !important
  
.list-item
  column 4
  
.btn-buy
  background-color: blue-fb
  border-radius: 2px
  color: white
  padding: btn-pad
  text-decoration: none
  font-family: inherit
  font-weight: 500
  border none
  margin-left: half
  margin-bottom: one
  
.btn-buy:hover
  color: dark-grey !important
  
.w-100
  width: 100%
  
.row
  display: -ms-flexbox
  display: flex
  -ms-flex-wrap: wrap
  flex-wrap: wrap
  margin-right: -15px
  margin-left: -15px
  
.col-12, .col-6, .col-lg-3, .col-lg-4, .col-lg-8, .col-lg-9, .col-md-4, .col-md-8
  position: relative
  width: 100%
  min-height: 1px
  padding-right: 15px
  padding-left: 15px


.*, ::after, ::before
  box-sizing: border-box
  
.nav
  display: -ms-flexbox
  display: flex
  -ms-flex-wrap: wrap
  flex-wrap: wrap
  padding-left: 0
  margin-bottom: 0
  list-style: none
  
.nav-link
  display: block
  padding: .5rem 1rem
  
.tab-content>.active
  display: block

.col-6
  -ms-flex: 0 0 50%
  flex: 0 0 50%
  max-width: 50%


.col-12
  -ms-flex: 0 0 100%
  flex: 0 0 100%
  max-width: 100%
  
.text-center
  text-align: center !important

.container
  width: 100%
  padding-right: 15px
  padding-left: 15px
  margin-right: auto
  margin-left: auto
  
a
  text-decoration:none !important

h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: 0.5rem
  
.pt-2
  padding-top: 0
  
@media (max-width: 600px)

  @media (min-width: 320px)
    .mobile-order-1
      -ms-flex-order: 1
      order: 1
      
    .mobile-order-2
      -ms-flex-order: 2
      order: 2
      
    .desc-sec
    
      .col-6
        margin-bottom: .65rem
        
      .col-12
        margin-bottom: .65rem
        
    .list-item
      column 2
      
    .nav-tabs
      justify-content: center
      
@media (min-width: 992px)
  .col-lg-3
    -ms-flex: 0 0 25%
    flex: 0 0 25%
    max-width: 25%
    
  .col-lg-4
    -ms-flex: 0 0 33.333333%
    flex: 0 0 33.333333%
    max-width: 33.333333%
    
  .col-lg-8
    -ms-flex: 0 0 66.666667%
    flex: 0 0 66.666667%
    max-width: 66.666667%
  
  .col-lg-9
    -ms-flex: 0 0 75%
    flex: 0 0 75%
    max-width: 75%
    
  .container
    max-width: 960px
    
  .pt-2
    padding-top: two
    
  
@media (min-width: 768px)
  .col-md-4
    -ms-flex: 0 0 33.333333%
    flex: -1 0 33.333333%
    max-width: 33.333333%
    
  .col-md-8
    -ms-flex: 0 0 66.666667%
    flex: 0 0 66.666667%
    max-width: 66.666667%
    
  .container
    max-width: 720px
    
@media (min-width: 576px)
  .container
    max-width: 540px
